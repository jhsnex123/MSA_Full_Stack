		function f1() {
			write(this, "h3");
		}
		f1();
		
		writeColor("객체 영역에서의 this",  "h2", "red");
		const obj = {
			name : '유니코',
			m : function() {
				write(this, "h3");
				write(this.name);				
			}
		}
		obj.m();
		
		function myFunction() {
			document.getElementById("h1").innerHTML = "I have changed!";
