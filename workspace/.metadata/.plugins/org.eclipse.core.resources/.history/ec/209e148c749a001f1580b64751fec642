<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>ECMAScript6</title>
</head>
<body>
	<h1>this?</h1>
	<div></div>
	<hr>
	<script src="util.js"></script>
	<script>		
	
		function customWrite(content, tag) {
			getDom("div").innerHTML += `<${tag}>${content}</${tag}>`;
		
		}
		
		function customWriteColor(content, tag, color) {
			getDom("div").innerHTML += "<"+tag+" style='color:"+color+"'>"+
			  content+"</"+tag+">";
		}
		
		
		
		writeColor("전역 코드 영역에서의 this",  "h2", "red");
		write(this, "h3");
		
		writeColor("지역 코드 영역에서의 this",  "h2", "red");
		
		function f1() {
			write(this, "h3");
		}
		f1();
		
		writeColor("객체 영역에서의 this",  "h2", "red");
		const obj = {
			name : '유니코',
			m : function() {
				write(this, "h3");
				write(this.name);				
			}
		}
		obj.m();
		
	getDOM("h1").addEventListener("click", f2);
	
		function f2() {
			customWriteColor("이벤트 핸들러에서의 this",  "h2", "red");
			const resultContainer = document.createElement("div");
			resultContainer.className = "result-container";
			resultContainer.innerHTML = this;
			document.body.appendChild(resultContainer);
		}	
		
	</script>	
</body>
</html>
